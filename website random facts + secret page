@app.route("/rahasia")
def rahasia():
    return '<h1>SECRET PAGE DONT TELL ANYONE</h1> "/<a href=coin_flip>Do a Coin Flip!</a>  <a href="/random_challenge">Gives a daily challenge!</a>'

@app.route("/coin_flip")
def coin_flip():
    return '"/<a href=coin_results>Flip COINS!</a>'

@app.route("/coin_results")
def coin_results():
    results = ["heads", "tails"]
    return f'<p>{random.choice(results)}</p> "/<a href=coin_flip>Do it again?</a> "/<a href=rahasia>Return to Secret Page?</a>'
     

app.run (debug=True)
