from flask import Flask
import random

app = Flask(__name__)

@app.route("/")
def hello_world():
    return '<h1>Random Facts</h1> <a href="/random_fact">View a random fact!</a>  <a href="/random_challenge">Gives a daily challenge!</a>'

@app.route("/random_fact")
def random_fact():
    facts = ["Pohon Tertua di Dunia berusia 4.600 tahun!",
             "Sampah plastik dapat bertahan selama 400 hingga 1000 tahun sebelum benar-benar terurai.",
             "Tanaman dapat merespons getaran suara, seperti suara air mengalir atau serangga. ",
             "Pada pagi hari, tinggi manusia sekitar 8 milimeter lebih tinggi dibandingkan saat malam hari.",
             "Pada awal 2026, populasi manusia di Bumi diperkirakan telah mencapai sekitar 8,3 miliar jiwa.",
             "Arab Saudi adalah satu-satunya negara besar di dunia yang tidak memiliki sungai yang mengalir permanen di permukaannya."
             "Terdapat sekitar 196 negara di dunia"
    ]
    return f'<p>{random.choice(facts)}</p>'

